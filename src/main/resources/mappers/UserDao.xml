<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xys.mb.daos.UserDao">
    <resultMap id="UserResultMap" type="com.xys.mb.entities.User">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="user_name" jdbcType="VARCHAR" property="userName" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="email" jdbcType="VARCHAR" property="email" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>
    <sql id="common_columns">
        id, user_name, password, email, create_time, update_time
    </sql>

    <select id="selectByUserId"  parameterType="java.lang.Long"  resultMap="UserResultMap">
        select
        <include refid="common_columns" />
        from my_blog.user_tab
        where id = #{id}
    </select>

    <select id="selectByUserName"  parameterType="java.lang.String"  resultMap="UserResultMap">
        select
        <include refid="common_columns" />
        from my_blog.user_tab
        where user_name = #{userName}
    </select>

    <insert id="insertUser" parameterType="com.xys.mb.entities.User">
        insert into my_blog.user_tab
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userName != null">
                user_name,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="email != null">
                email,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userName != null">
                #(userName),
            </if>
            <if test="password != null">
                #(password),
            </if>
            <if test="email != null">
                #(email),
            </if>
            <if test="createTime != null">
                #(createTime),
            </if>
            <if test="updateTime != null">
                #(updateTime),
            </if>
        </trim>
    </insert>

</mapper>
